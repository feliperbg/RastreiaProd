{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "_id",
    "__v",
    "CPF",
    "credencial",
    "dataNascimento",
    "email",
    "imagemFuncionario",
    "nome",
    "permissoes",
    "senha",
    "telefone",
    "turno"
  ],
  "properties": {
    "_id": {
      "$ref": "#/$defs/ObjectId"
    },
    "__v": {
      "type": "integer"
    },
    "CPF": {
      "type": "string"
    },
    "credencial": {
      "type": "integer"
    },
    "dataNascimento": {
      "$ref": "#/$defs/Date"
    },
    "email": {
      "type": "string"
    },
    "imagemFuncionario": {
      "type": "string"
    },
    "nome": {
      "type": "string"
    },
    "permissoes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "role": {
      "type": "string"
    },
    "senha": {
      "type": "string"
    },
    "telefone": {
      "type": "string"
    },
    "turno": {
      "type": "string"
    }
  },
  "$defs": {
    "ObjectId": {
      "type": "object",
      "properties": {
        "$oid": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{24}$"
        }
      },
      "required": [
        "$oid"
      ],
      "additionalProperties": false
    },
    "Date": {
      "type": "object",
      "properties": {
        "$date": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "$date"
      ],
      "additionalProperties": false
    }
  }
}