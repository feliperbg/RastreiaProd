{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "_id",
    "etapa",
    "funcionarioAtivo",
    "produto",
    "status",
    "timestampProducao"
  ],
  "properties": {
    "_id": {
      "$ref": "#/$defs/ObjectId"
    },
    "etapa": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "etapa",
          "fim",
          "inicio",
          "observacao",
          "status"
        ],
        "properties": {
          "etapa": {
            "$ref": "#/$defs/ObjectId"
          },
          "fim": {
            "$ref": "#/$defs/Date"
          },
          "inicio": {
            "$ref": "#/$defs/Date"
          },
          "observacao": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        }
      }
    },
    "funcionarioAtivo": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "funcionario",
          "inicio"
        ],
        "properties": {
          "fim": {
            "$ref": "#/$defs/Date"
          },
          "funcionario": {
            "$ref": "#/$defs/ObjectId"
          },
          "inicio": {
            "$ref": "#/$defs/Date"
          }
        }
      }
    },
    "produto": {
      "$ref": "#/$defs/ObjectId"
    },
    "status": {
      "type": "boolean"
    },
    "timestampProducao": {
      "type": "object",
      "required": [
        "fim",
        "inicio"
      ],
      "properties": {
        "fim": {
          "$ref": "#/$defs/Date"
        },
        "inicio": {
          "$ref": "#/$defs/Date"
        }
      }
    }
  },
  "$defs": {
    "ObjectId": {
      "type": "object",
      "properties": {
        "$oid": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{24}$"
        }
      },
      "required": [
        "$oid"
      ],
      "additionalProperties": false
    },
    "Date": {
      "type": "object",
      "properties": {
        "$date": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "$date"
      ],
      "additionalProperties": false
    }
  }
}