<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sistema LP</title>
  <!-- Bootstrap 5 -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
  <!-- Font Awesome (para compatibilidade com AdminLTE) -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <!-- AdminLTE CSS -->
  <link rel="stylesheet" href="css/adminlte.css" />
  <!-- Estilos personalizados -->
  <style>
    .brand-link img {
      width: 33px;
      height: 33px;
      margin-right: 0.5rem;
    }
    .user-panel img {
      width: 45px;
      height: 45px;
    }
    .nav-sidebar .nav-item > .nav-link {
      margin-bottom: 0.2rem;
    }
  </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button">
          <i class="fas fa-bars"></i>
        </a>
      </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
      <li class="nav-item dropdown user-menu">
        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
          <img id="user-image" class="user-image rounded-circle shadow" alt="Usuário" />
          <span id="nomeFuncionario" class="d-none d-md-inline">Usuário</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-end">
          <li class="user-footer">
            <a href="#" class="btn btn-default btn-flat">Perfil</a>
            <a id="btnLogout" class="btn btn-default btn-flat float-end">Sair</a>
          </li>
        </ul>
      </li>
    </ul>
  </nav>

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/painel" class="brand-link">
      <img src="imagens/logo-login.jpg" alt="Logo Sistema LP" class="brand-image img-circle elevation-3" style="opacity: .8">
      <span class="brand-text font-weight-light">Sistema LP</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
          <img id="sidebar-user-image" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
          <a href="#" id="sidebar-user-name" class="d-block">Usuário</a>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Dashboard -->
          <li class="nav-item">
            <a href="/painel" class="nav-link active">
              <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>Dashboard</p>
            </a>
          </li>

          <!-- Produtos -->
          <li class="nav-item">
            <a href="/produto" class="nav-link">
              <i class="nav-icon fas fa-box"></i>
              <p>Produtos</p>
            </a>
          </li>

          <!-- Componentes -->
          <li class="nav-item">
            <a href="/componente" class="nav-link">
              <i class="nav-icon fas fa-microchip"></i>
              <p>Componentes</p>
            </a>
          </li>

          <!-- Linha de Produção -->
          <li class="nav-item">
            <a href="/linha_producao" class="nav-link">
              <i class="nav-icon fas fa-project-diagram"></i>
              <p>Linha de Produção</p>
            </a>
          </li>

          <!-- Funcionários (oculto por padrão) -->
          <li class="nav-item" id="menu-funcionarios" style="display: none;">
            <a href="/funcionario" class="nav-link">
              <i class="nav-icon fas fa-users"></i>
              <p>Funcionários</p>
            </a>
          </li>

          <!-- Menu com subitens (exemplo) -->
          <li class="nav-item">
            <a href="#" class="nav-link">
              <i class="nav-icon fas fa-cog"></i>
              <p>
                Configurações
                <i class="right fas fa-angle-left"></i>
              </p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="/configuracoes/perfil" class="nav-link">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Meu Perfil</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/configuracoes/sistema" class="nav-link">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Sistema</p>
                </a>
              </li>
            </ul>
          </li>
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0"><%= title || 'Dashboard' %></h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/painel">Home</a></li>
              <li class="breadcrumb-item active"><%= breadcrumb || 'Página' %></li>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <%- body %>
      </div>
    </section>
  </div>

  <!-- Toast Notification -->
  <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="meuToast" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div id="toast-body" class="toast-body"></div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Fechar"></button>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="main-footer">
    <strong>Copyright &copy; 2024 <a href="#">Sistema LP</a>.</strong>
    Todos os direitos reservados.
    <div class="float-right d-none d-sm-inline-block">
      <b>Versão</b> 1.0.0
    </div>
  </footer>
</div>

<!-- jQuery -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<!-- Bootstrap 5 JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="/js/adminlte.js"></script>
<!-- Toast JS -->
<script src="/js/toast.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Carregar dados do usuário
    const nomeFuncionario = document.getElementById("nomeFuncionario");
    const sidebarUserName = document.getElementById("sidebar-user-name");
    const userImage = document.getElementById("user-image");
    const sidebarUserImage = document.getElementById("sidebar-user-image");
    const btnLogout = document.getElementById("btnLogout");

    const userDataJSON = localStorage.getItem("userData");
    const userImageSrc = localStorage.getItem("userImage") || 'imagens/user-default.jpg';

    // Definir imagens do usuário
    userImage.src = userImageSrc;
    sidebarUserImage.src = userImageSrc;

    if (userDataJSON) {
      const userData = JSON.parse(userDataJSON);
      const userName = userData.nome || "Funcionário";
      nomeFuncionario.textContent = userName;
      sidebarUserName.textContent = userName;
      
      // Mostrar menu de funcionários se for admin
      if (userData.nivel_acesso === 'admin') {
        document.getElementById('menu-funcionarios').style.display = 'block';
      }
    }

    // Logout
    btnLogout.addEventListener("click", function(event) {
      event.preventDefault();
      fazerLogout();
    });

    function fazerLogout() {
      fetch("/funcionario/logout", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ token: localStorage.getItem("authToken") }),
      })
      .then(res => {
        if (!res.ok) {
          throw new Error(`Erro na resposta do servidor: ${res.statusText}`);
        }                                                                     
        return res.json();
      })
      .then(dados => {
        if (dados.status) {
          localStorage.removeItem('userData');
          localStorage.removeItem('authToken');
          localStorage.removeItem('userImage');
          exibirMensagem("Logout bem-sucedido! Redirecionando...", "sucesso");
          setTimeout(() => {
            window.location.href = '/login';
          }, 1000);
        } else {
          exibirMensagem(dados.msg || "Erro ao fazer logout!", "erro");
        }
      })
      .catch(error => {
        exibirMensagem(`Erro ao fazer logout: ${error.message}`, "erro");
      });
    }

    // Ativar menus ativos com base na URL
    const currentUrl = window.location.pathname;
    document.querySelectorAll('.nav-link').forEach(link => {
      if (link.getAttribute('href') === currentUrl) {
        link.classList.add('active');
        let parent = link.closest('.nav-treeview');
        while (parent) {
          parent.previousElementSibling.classList.add('active');
          parent = parent.closest('.nav-treeview');
        }
      }
    });
  });
</script>
</body>
</html>