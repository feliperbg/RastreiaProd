<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Etapas do Produto</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="/css/adminlte.min.css">
    <link rel="stylesheet" href="css/tabela.css">
</head>
<body class="layout-fixed sidebar-expand-lg bg-body-tertiary">
    <div class="app-wrapper">
        <%- include('../partials/header.ejs') %>
        <%- include('../partials/sidebar.ejs') %>
            <main class="app-main">
                <div class="app-content">
                    <div class="container-fluid">
                <h1 class="mb-4 text-center">Etapas do Produto</h1>    
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" id="filtro" class="form-control" placeholder="Pesquisar etapa...">
                            </div>
                            <div class="col-md-6 text-end">
                                <a href="/produtos/<%= produtoId %>/etapas/adicionar" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Adicionar Etapa
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>Sequência</th>
                                <th>Nome</th>
                                <th>Departamento Responsável</th>
                                <th>Procedimento</th>
                                <th>Componente Conclusão</th>
                                <th>Funcionários Responsáveis</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody id="tabela-etapas">
                            <% if (etapas && etapas.length > 0) { %>
                                <% etapas.forEach(etapa => { %>
                                    <tr data-id="<%= etapa._id %>">
                                        <td><%= etapa.sequencias %></td>
                                        <td><%= etapa.nome %></td>
                                        <!-- Nota: Para exibir o nome, o controller precisa usar .populate('departamento') -->
                                        <td><%= etapa.departamento ? etapa.departamento.nome : 'N/A' %></td>
                                        <td><%= etapa.procedimento %></td>
                                        <td><%= etapa.componenteConclusao %></td>
                                        <!-- Nota: Para exibir os nomes, o controller precisa usar .populate('funcionarios') -->
                                        <td><%= etapa.funcionarios && etapa.funcionarios.length > 0 ? etapa.funcionarios.map(f => f.nome).join(', ') : 'Nenhum' %></td>
                                        <td>
                                            <a href="/etapas/<%= etapa._id %>/editar" class="btn btn-sm btn-warning me-1" title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <!-- A exclusão é feita via JS com uma confirmação (SweetAlert2) -->
                                            <button onclick="excluirEtapa('<%= etapa._id %>')" class="btn btn-sm btn-danger" title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center">Nenhuma etapa encontrada para este produto.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</body>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Seus scripts -->
    <script src="/js/adminlte.min.js"></script>
    <script src="/js/tabela.js"></script>
    <script>
        // Exemplo de função de exclusão que pode estar em um arquivo JS separado (como /js/etapa.js)
        function excluirEtapa(id) {
            Swal.fire({
                title: 'Você tem certeza?',
                text: "A exclusão não poderá ser revertida!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sim, excluir!',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Envia uma requisição DELETE para o servidor e recarrega a página em caso de sucesso
                    fetch(`/etapas/${id}`, { method: 'DELETE' })
                        .then(res => res.ok ? window.location.reload() : Swal.fire('Erro!', 'Não foi possível excluir a etapa.', 'error'));
                }
            });
        }
    </script>
</html>
