      { id: '_todo', title: 'A Fazer', class: 'bg-info', item: [{ title: 'OP-001 - Produto X' }, { title: 'OP-005 - Produto Z' }] },
      { id: '_doing', title: 'Em Produção', class: 'bg-warning', item: [{ title: 'OP-002 - Produto Y' }] },
      { id: '_review', title: 'Em Revisão', class: 'bg-primary', item: [{ title: 'OP-003 - Produto W' }] },
