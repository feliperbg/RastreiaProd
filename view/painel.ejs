<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <title>Painel de Controle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap e AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="css/adminlte.css" />
  </head>
  <body class="layout-fixed sidebar-expand-lg bg-body-tertiary">
    
    <div class="app-wrapper">
      <!-- Header -->
      <%- include('partials/header.ejs') %>
      <%- include('partials/sidebar.ejs') %>

      <!-- Conteúdo principal -->
      <main class="app-main">
        <div class="app-content">
          <div class="container-fluid">
            <div class="row">
              <!-- Funcionários: Barras -->
              <div class="col-md-4 mb-3">
                <div class="card">
                  <div class="card-header bg-primary text-white">Etapas executadas por Funcionário</div>
                  <div class="card-body">
                    <canvas id="graficoFuncionarios"></canvas>
                  </div>
                </div>
              </div>
              <!-- Controle de Etapas: Linha -->
              <div class="col-md-4 mb-3">
                <div class="card">
                  <div class="card-header bg-info text-white">Etapas Finalizadas por Dia</div>
                  <div class="card-body">
                    <canvas id="graficoEtapas"></canvas>
                  </div>
                </div>
              </div>

              <!-- Componentes: Barras horizontais -->
              <div class="col-md-4 mb-3">
                <div class="card">
                  <div class="card-header bg-warning text-white">Componentes Mais Utilizados</div>
                  <div class="card-body">
                    <canvas id="graficoComponentes"></canvas>
                  </div>
                </div>
              </div>
              <!-- Produtos: Pizza -->
              <div class="col-md-5 mb-4">
                <div class="card">
                  <div class="card-header bg-success text-white">Distribuição de Produtos por Categoria</div>
                  <div class="card-body">
                    <canvas id="graficoProdutos"></canvas>
                  </div>
                </div>
              </div>
              <!--Espaçamento-->
              <div class="col-md-2 mb-3"> </div>
              <!-- Linha de Produção: Donut -->
              <div class="col-md-5 mb-4">
                <div class="card">
                  <div class="card-header bg-danger text-white">Ocupação das Linhas de Produção</div>
                  <div class="card-body">
                    <canvas id="graficoLinhas"></canvas>
                  </div>
                </div>
              </div>
            </div>

              <!-- Adicione mais cards aqui -->
            </div>
          </div>
        </div>
      </main>

      <!-- Rodapé -->
      <footer class="app-footer text-center py-3">
        <strong>&copy; 2025 Sistema de Produção.</strong> Todos os direitos reservados.
      </footer>
    </div>

    <!-- Container de Toasts -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
      <div id="meuToast" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
          <div id="toast-body" class="toast-body"></div>
          <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Fechar"></button>
        </div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2"></script>
    <script src="/js/adminlte.js"></script>
    <script src="/js/script_painel.js"></script>
    <script src="/js/toast.js"></script>
    <script>
      // Gráfico de Funcionários
      new Chart(document.getElementById('graficoFuncionarios'), {
        type: 'bar',
        data: {
          labels: ['João', 'Maria', 'Carlos', 'Ana'],
          datasets: [{
            label: 'Etapas',
            data: [12, 19, 7, 14],
            backgroundColor: '#0d6efd'
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { display: false } }
        }
      });

      new Chart(document.getElementById('graficoProdutos'), {
        type: 'pie',
        data: {
          labels: ['Eletrônicos', 'Mecânicos', 'Químicos'],
          datasets: [{
            label: 'Categoria',
            data: [30, 45, 25],
            backgroundColor: ['#198754', '#20c997', '#0dcaf0']
          }]
        },
        options: {
          plugins: {
            datalabels: {
              color: '#fff',
              font: {
                weight: 'bold',
                size: 14
              },
              formatter: (value) => `${value}`
            }
          }
        },
        plugins: [ChartDataLabels]
      });

    
      // Gráfico de Componentes
      new Chart(document.getElementById('graficoComponentes'), {
        type: 'bar',
        data: {
          labels: ['Parafuso', 'Resistor', 'Motor', 'Sensor'],
          datasets: [{
            label: 'Uso',
            data: [50, 80, 30, 60],
            backgroundColor: '#ffc107'
          }]
        },
        options: {
          indexAxis: 'y',
          responsive: true,
          plugins: { legend: { display: false } }
        }
      });
    
      // Gráfico de Etapas
      new Chart(document.getElementById('graficoEtapas'), {
        type: 'line',
        data: {
          labels: ['Seg', 'Ter', 'Qua', 'Qui', 'Sex'],
          datasets: [{
            label: 'Etapas Finalizadas',
            data: [5, 9, 7, 6, 10],
            borderColor: '#0dcaf0',
            backgroundColor: 'rgba(13,202,240,0.2)',
            fill: true,
            tension: 0.4
          }]
        },
        options: { responsive: true }
      });
    
      // Gráfico de Linhas de Produção
      new Chart(document.getElementById('graficoLinhas'), {
        type: 'doughnut',
        data: {
          labels: ['Linha A', 'Linha B', 'Linha C'],
          datasets: [{
            data: [40, 35, 25],
            backgroundColor: ['#dc3545', '#fd7e14', '#ffc107']
          }]
        },
        options: { 
          responsive: true,
          plugins: {
            datalabels: {
              color: '#fff',
              font: {
                weight: 'bold',
                size: 14
              },
              formatter: (value) => `${value}`
            }
          }
        },
        plugins: [ChartDataLabels]
        });
    </script>
    
  </body>
</html>
