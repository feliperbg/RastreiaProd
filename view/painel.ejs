          labels: dados.map(d => d.dia),
          datasets: [{
            label: 'Etapas Finalizadas',
            data: dados.map(d => d.total),
            borderColor: '#0dcaf0',
            backgroundColor: 'rgba(13,202,240,0.2)',
            fill: true,
            tension: 0.4
          }]
        },
        options: { responsive: true }
